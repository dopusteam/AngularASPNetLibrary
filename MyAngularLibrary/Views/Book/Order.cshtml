@{
    Layout = null;
}

<div>
    <div class="modal-header">
        <p>Order book</p>
    </div>
    <div class="modal-body">
        <div ng-if="bookOrderCtrl.error" class="text-danger">
            Error occurred
        </div>
        <div class="form-group">
            <label for="client">Client</label>
            <select id="client" type="text" ng-model="bookOrderCtrl.data.ClientId" class="form-control">
                <option value="" disabled selected>- Please Choose -</option>
                <option ng-repeat="client in bookOrderCtrl.clients" value="{{client.Id}}">{{client.Name}}</option>
            </select>
        </div>
        <input type="button" class="btn btn-default" value="Save" ng-click="bookOrderCtrl.save()" />
        <input type="button" class="btn btn-default" value="Cancel" ng-click="bookOrderCtrl.cancel()" />
    </div>
</div>
