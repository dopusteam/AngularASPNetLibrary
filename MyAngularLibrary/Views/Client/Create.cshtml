<div>
    <div class="modal-header">
        <p>Adding client</p>
    </div>
    <div class="modal-body">
        <div ng-if="ctrl.error" class="text-danger">
            Error occurred
        </div>
        <div class="form-group">
            <label for="title">Name</label>
            <input id="title" type="text" ng-model="ctrl.client.Name" class="form-control"/>
        </div>
        <input type="button" class="btn btn-default" value="Save" ng-click="ctrl.save()"/>
        <input type="button" class="btn btn-default" value="Cancel" ng-click="ctrl.cancel()"/>
    </div>
</div>